<% content_for :page_title do %>
<h1><%= Spree.t("robokassa.pay") %></h1>
<% end %>

<%= form_tag @gateway.url, :method => "POST" do %>
<%= hidden_field_tag(:"MrchLogin", @gateway.options[:mrch_login]) %>
<%= hidden_field_tag(:"OutSum", @order.total)%>
<%= hidden_field_tag(:"InvId", @order.number.gsub("R", ""))%>
<%= hidden_field_tag(:"Desc", Spree.t("robokassa.details_of_payment", :order_number => @order.number)) %>
<%= hidden_field_tag(:"SignatureValue", @signature) %>
<h1><%= "#{Spree.t('order')} #{@order.number}" %></h1>
<%= render :partial => 'spree/shared/order_details', :locals => {:order => @order} %>

<button type="submit" class="btn btn-default btn-lg button_buy" aria-label="<%= Spree.t('pay') %>">
  <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"><%= Spree.t("pay") %></span>
</button>
<% end %>
